<html lang="en">
	<%- include('./partials/header'); -%>
	<body>
		<main class="uk-container uk-container-large uk-height-1-1 uk-flex uk-flex-middle uk-flex-center">
			<div class="uk-width-1-3 uk-card uk-card-primary uk-card-body uk-text-center uk-margin-large-bottom">
				<h2>Авторизация</h2>
				<form action="/login" method="post">
					<div class="uk-margin">
						<div class="uk-inline">
							<span class="uk-form-icon" uk-icon="icon: user"></span>
							<input class="uk-input" name="mail" type="email" required />
						</div>
					</div>
					<div class="uk-margin">
						<div class="uk-inline">
							<span class="uk-form-icon" uk-icon="icon: lock"></span>
							<input class="uk-input" name="password" type="password" required />
						</div>
					</div>
					<button class="uk-button uk-button-default uk-width-2-3">войти</button>
				</form>
				<div class="uk-flex uk-flex-column">
					<a class="uk-link uk-width-1-1 uk-text-small" href="/registration">регистрация</a>
					<a class="uk-link uk-text-small" href="https://oauth.vk.com/authorize?client_id=8086306&redirect_uri=http://pmsokolova.ru/login&display=popup&response_type=code">войти с помощью VK</a>
				</div>
			</div>
		</main>
		<script src="/scriptAuth.js"></script>
	</body>
</html>
